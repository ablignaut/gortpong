<%= form_for @player do |f| %>

  <div class="form-group">
    <%= f.label :slack_handle %>
    <%= f.text_field :slack_handle %>
  </div>

  <div class="form-group">
    <%= f.label :display_name %>
    <%= f.text_field :display_name %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>


<% end %>
