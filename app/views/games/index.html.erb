<h2 style="display: inline-block">Game Log</h2>

<table class="list-table">
  <tr>
    <th>id</th>
    <th>Winner</th>
    <th>Score</th>
    <th>Loser</th>
    <th>Score</th>
  </tr>
  <% @games.each do |game| %>

  <tr>
    <td>
      <%= game.id %>
    </td>
    <td>
      <%= game.winner.display_name %>
    </td>
    <td>
      <%= game.winner_score %>
    </td>
    <td>
      <%= game.loser.display_name %>
    </td>
    <td>
      <%= game.loser_score %>
    </td>
  </tr>

  <% end %>
