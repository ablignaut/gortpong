<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1>New Game</h1>

<%= form_for @game do |f| %>

  <div class="form-group">
    <%= f.label :winner_slack %>
    <%= f.text_field :winner_slack %>
  </div>

  <div class="form-group">
    <%= f.label :winner_score %>
    <%= f.number_field :winner_score %>
  </div>

  <div class="form-group">
    <%= f.label :loser_slack %>
    <%= f.text_field :loser_slack %>
  </div>

  <div class="form-group">
    <%= f.label :loser_score %>
    <%= f.number_field :loser_score %>
  </div>

  <div class="form-group">
    <%= f.label 'Submit key' %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
