<div class="col-lg-12">
  <div class="col-lg-12 full-width-content">
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <h1 class="main-title">Submit Game Result</h1>

    <p>By submitting this form, you verify that the game in question actually occurred and both participants agree with the result. For key please message @filips / @cstaikos on slack.</p>

    <%= form_for @game, :html => {:class => 'form-horizontal'} do |f| %>

      <div class="form-group">
        <%= f.label :winner_slack, :class => 'col-sm-2 control-label' %>
        <div class='col-lg-4 col-sm-6'>
          <%= f.text_field :winner_slack, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :winner_score, :class => 'col-sm-2 control-label' %>
        <div class='col-lg-4 col-sm-6'>
          <%= f.number_field :winner_score, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :loser_slack, :class => 'col-sm-2 control-label' %>
        <div class='col-lg-4 col-sm-6'>
          <%= f.text_field :loser_slack, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :loser_score, :class => 'col-sm-2 control-label' %>
        <div class='col-lg-4 col-sm-6'>
          <%= f.number_field :loser_score, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label 'Submit key', :class => 'col-sm-2 control-label' %>
        <div class='col-lg-4 col-sm-6'>
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class='col-lg-4 col-lg-offset-2'>
        <%= f.submit :class => 'btn btn-default' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
