<!DOCTYPE html>
<html>
<head>
  <title>Gortpong</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <header>

    <div class="logo pull-left">
      <%= link_to image_tag("gortpong-draft.png", class: 'img-logo'), root_path %>
    </div>

    <nav class="btn-group-vertical pull-right main-nav">
      <%= link_to 'Add Game', new_game_path, class: "btn btn-primary" %>
      <%= link_to 'Join Ladder', new_player_path, class: "btn btn-primary" %>
      <%= link_to 'Rules', rules_path, class: "btn btn-primary" %>
      <%= link_to 'About', root_url, class: "btn btn-primary" %>
    </nav>

    <%= render 'ataglance' %>

  </header>


  <div class="body-content">
    <%= yield %>
  </div>


  <footer>

  </footer>
</div>

</body>
</html>
